% Facts
male(john).
male(peter).
male(mike).
male(david).

female(linda).
female(susan).
female(mary).
female(emma).

% parent(Parent, Child)
parent(john, peter).
parent(john, mary).
parent(linda, peter).
parent(linda, mary).
parent(peter, mike).
parent(susan, mike).
parent(mary, emma).
parent(david, emma).

% Rules
father(F, C) :-
    male(F),
    parent(F, C).

mother(M, C) :-
    female(M),
    parent(M, C).

sibling(X, Y) :-
    parent(P, X),
    parent(P, Y),
    X \= Y.

grandparent(GP, GC) :-
    parent(GP, P),
    parent(P, GC).

grandfather(GF, GC) :-
    male(GF),
    grandparent(GF, GC).

grandmother(GM, GC) :-
    female(GM),
    grandparent(GM, GC).
